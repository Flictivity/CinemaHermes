<Window x:Class="CinemaHermes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaHermes"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280">
    <Grid Background="#FFBACBD2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal">
            <Image Source="/VHS.png" Width="100" Height="100" Margin="0 0 20 0" VerticalAlignment="Center"/>
            <TextBlock Text="Видеопрокат Hermes" VerticalAlignment="Center" FontSize="50" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
